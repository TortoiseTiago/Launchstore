<div class="item">
  <div>Categoria</div>
  <div>
    <select name="category_id">
      {% for category in categories %}
        <option value="{{category.id}}" {% if products.category_id == category.id %} selected="selected" {% endif %}>
          {{category.name}}
        </option>
      {% endfor %}
    </select>
  </div>
</div>

<div class="item">
  <div>Titulo</div>
  <div>
    <input type="text" name="name" placeholder="Nome do produto" value="{{products.name}}">
  </div>
</div>

<div class="item">
  <div>Descrição</div>
  <div>
    <textarea name="description">{{ products.description }}</textarea>
  </div>
</div>

{# Campo de Foto #}

<div class="item">
  <div>Valor do Produto</div>
  <div>
    <input id="price" type="text" name="price" placeholder="Digite o valor do produto" value="{{ products.price }}" onkeydown="Mask.apply(this, 'formatBRL')">

  </div>

  {% if product.old_price %}
    <input type="hidden" name="old_price" value="{{ products.old_price }}">
  {% endif %}

</div>

<div class="item">
  <div>Quantidade</div>
  <div><input type="number" name="quantity" placeholder="Estoque disponivel" value="{{products.quantity}}"></div>
</div>

{% if (products.status == '1') 
  or(products.status == 0) %}
  {# Se ja estiver cadastrado mostra, senão entra como disponivel imediatamente apos cadastro #}
  <div class="item">
    <div>Disponivel</div>
    <div>
      <span>
        <input type="radio" name="status" value="1" {% if products.status == "1" %} checked="checked" {% endif %}>Sim
      </span>
      <span>
        <input type="radio" name="status" value="0" {% if products.status == "0" %} checked="checked" {% endif %}>Não
      </span>
    </div>
  </div>

  <script src="/script.js"></script>

{% endif %}